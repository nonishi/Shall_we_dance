<div class="container">
  <div class="row">
    <div class="mx-auto mt-2">
      <h2>管理者ログイン</h2>
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br/>
          <%= f.email_field :email, size: 30 %>
        </div>
        <div class="field">
          <%= f.label :password, "パスワード" %><br/>
          <%= f.password_field :password, size: 30 %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>