<div class="contianer">
  <div class="row post-index">
    <div class="my-3 search">
      <%= render 'search', search_params: @search_params %>
    </div>
    <div class="my-3 list">
      <h2>検索結果一覧<span class="small">(全<%= @all_posts.count %>件)</span></h2>
      <span>
        新着順 
        <%= link_to "(降順)", search_posts_path(sort: 'new', search: {"target"=>params[:search][:target], "status"=>params[:search][:status], "height_from"=>params[:search][:height_from], "height_to"=>params[:search][:height_to], "age_from"=>params[:search][:age_from], "age_to"=>params[:search][:age_to], "area"=>params[:search][:area]}) %>・
        <%= link_to "(昇順)", search_posts_path(sort: 'old', search: {"target"=>params[:search][:target], "status"=>params[:search][:status], "height_from"=>params[:search][:height_from], "height_to"=>params[:search][:height_to], "age_from"=>params[:search][:age_from], "age_to"=>params[:search][:age_to], "area"=>params[:search][:area]}) %> |
        年齢順 
        <%= link_to "(降順)", search_posts_path(sort: 'old_age', search: {"target"=>params[:search][:target], "status"=>params[:search][:status], "height_from"=>params[:search][:height_from], "height_to"=>params[:search][:height_to], "age_from"=>params[:search][:age_from], "age_to"=>params[:search][:age_to], "area"=>params[:search][:area]}) %>・
        <%= link_to "(昇順)", search_posts_path(sort: 'young', search: {"target"=>params[:search][:target], "status"=>params[:search][:status], "height_from"=>params[:search][:height_from], "height_to"=>params[:search][:height_to], "age_from"=>params[:search][:age_from], "age_to"=>params[:search][:age_to], "area"=>params[:search][:area]}) %> |
        身長順 
        <%= link_to "(降順)", search_posts_path(sort: 'high', search: {"target"=>params[:search][:target], "status"=>params[:search][:status], "height_from"=>params[:search][:height_from], "height_to"=>params[:search][:height_to], "age_from"=>params[:search][:age_from], "age_to"=>params[:search][:age_to], "area"=>params[:search][:area]}) %>・
        <%= link_to "(昇順)", search_posts_path(sort: 'low', search: {"target"=>params[:search][:target], "status"=>params[:search][:status], "height_from"=>params[:search][:height_from], "height_to"=>params[:search][:height_to], "age_from"=>params[:search][:age_from], "age_to"=>params[:search][:age_to], "area"=>params[:search][:area]}) %> |
        ダンス歴 
        <%= link_to "(降順)", search_posts_path(sort: 'long', search: {"target"=>params[:search][:target], "status"=>params[:search][:status], "height_from"=>params[:search][:height_from], "height_to"=>params[:search][:height_to], "age_from"=>params[:search][:age_from], "age_to"=>params[:search][:age_to], "area"=>params[:search][:area]}) %>・
        <%= link_to "(昇順)", search_posts_path(sort: 'short', search: {"target"=>params[:search][:target], "status"=>params[:search][:status], "height_from"=>params[:search][:height_from], "height_to"=>params[:search][:height_to], "age_from"=>params[:search][:age_from], "age_to"=>params[:search][:age_to], "area"=>params[:search][:area]}) %>
      </span>
      <% if @posts.exists? %>
        <% @posts.each do |post| %>
          <%= render 'index', post: post, user: post.user %>
        <% end %>
        <%= paginate @posts %>
      <% else %>
        <p>条件に合う方は見つかりませんでした。</p>
      <% end %>
    </div>
  </div>
</div>