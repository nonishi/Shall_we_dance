<div class="container">
  <div class="row mypage-main">
    <div class="mx-auto mt-3">
      <h1 class="text-center">
        <% if current_user == @user %>
          My Page
        <% else %>
          <%= @user.name %>さんのPage
        <% end %>
      </h1>
      <table class="table">
        <tr><%= attachment_image_tag @user, :profile_image, size: "180x180", fallback: "no_image.jpg", style: "border-radius: 50%;" %></tr>
        <tr>
          <th>募集状況</th>
          <td>
            <% if @user.is_active %>
              【<font color="green">募集中</font>】
            <% else %>
              【<font color="gray">募集終了</font>】
            <% end %>
          </td>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @user.name %> 【<%= @user.status %>】</td>
        </tr>
        <tr>
          <th>年齢</th>
          <td><%= @user.age %>歳</td>
        </tr>
        <tr>
          <th>身長</th>
          <td><%= @user.height %>cm</td>
        </tr>
        <tr>
          <th>地域</th>
          <td><%= @user.area %></td>
        </tr>
        <tr>
          <th>社交ダンス歴</th>
          <td><%= @user.experience %>(学連：<%= @user.club_status %>）</td>
        </tr>
        <tr>
          <th>その他(持ち級など)</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
    </div>
    <div>
      <ul class="mt-5 text-left side_menu">
        <% if @user.id == current_user.id %>
          <li class="nav-item">
            <%= link_to edit_user_path(@user), class: "btn" do %>
              <i class="fas fa-user-edit fa-lg"></i> プロフィール編集
            <% end %>
          </li>
          <li class="nav-item">
            <% if Post.where(user_id: @user.id).exists? %>
              <%= link_to post_path(@user.post), class: "btn" do %>
                <i class="fas fa-edit fa-lg"></i> 自分の募集要項を見る
              <% end %>
            <% else %>
              <%= link_to new_post_path, class: "btn" do %>
                <i class="fas fa-edit fa-lg"></i> 募集要項を作成する
              <% end %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to user_favorites_path(@user), class: "btn" do %>
              <i class="fas fa-heart fa-lg"></i> 気になる一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to notifications_path, class: "btn" do %>
              <% if unchecked_notifications.any? %>
                <i class="fas fa-bell fa-lg faa-flash animated"></i> 通知一覧
              <% else %>
                <i class="fas fa-bell fa-lg"></i> 通知一覧
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>